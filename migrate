#! /usr/bin/perl
use FindBin qw($Bin);
use lib "$Bin/lib";
use Getopt::Long;

use Modern::Perl;
use Koha::Migration;

my ( $confirm, $verbose, $max, $skip_dedup );
GetOptions (
    'confirm|c' => \$confirm,
    'v' => \$verbose,
    'max|m=i' => \$max,
    'skip-dedup' => \$skip_dedup,
);

my $options = {
    'confirm' => $confirm,
    'verbose' => $verbose,
    'max' => $max,
    'skip_dedup' => $skip_dedup,
    'Bin' => $Bin,
};

my $migration = Koha::Migration->new($options);

$migration->migrate;
